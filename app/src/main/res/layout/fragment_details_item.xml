<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#334CAF50"
    android:backgroundTint="#B94CAF50"
    android:gravity="left"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".views.DetailsItemFragment">

    <TextView
        android:id="@+id/cotegory_textView"
        android:layout_width="261dp"
        android:layout_height="34dp"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/shape_text"
        android:backgroundTint="#99005F73"
        android:fontFamily="sans-serif-black"
        android:paddingLeft="10dp"
        android:text="TextView"
        android:textColor="#266A2E"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/titleedit_textView"
            android:layout_width="248dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:background="@drawable/shape_text"
            android:backgroundTint="#99005F73"
            android:fontFamily="monospace"
            android:paddingLeft="10dp"
            android:text="Title"
            android:textColor="#266A2E"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/status_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_text"
            android:backgroundTint="#99005F73"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="TextView"
            android:textColor="#266A2E"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/descriptionedit_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginBottom="20dp"
        android:background="@drawable/shape_text"
        android:backgroundTint="#99005F73"
        android:fontFamily="sans-serif-black"
        android:inputType="textMultiLine|textImeMultiLine"
        android:paddingLeft="10dp"
        android:text="TextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextView"
        android:textColor="#266A2E"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/deadlineedit_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/shape_text"
        android:backgroundTint="#99005F73"
        android:fontFamily="sans-serif-black"
        android:paddingLeft="10dp"
        android:text="12/10/2021"
        android:textColor="#266A2E"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/createddata_textView"
        android:layout_width="137dp"
        android:layout_height="43dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/shape_text"
        android:backgroundTint="#99005F73"
        android:paddingLeft="10dp"
        android:text="TextView"
        android:textColor="#266A2E" />

    <Button
        android:id="@+id/edittododetails_button"
        android:layout_width="327dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:backgroundTint="#005F73"
        android:gravity="center"
        android:text="Edit ToDo"
        android:textColor="#94D2BD" />

</LinearLayout>