<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.DetailsItemFragment" >

    <TextView
        android:id="@+id/titleedit_textView"
        android:layout_width="193dp"
        android:layout_height="34dp"
        android:layout_marginTop="64dp"
        android:fontFamily="sans-serif-black"
        android:text="Title"
        android:textSize="34sp"
        app:layout_constraintEnd_toStartOf="@+id/edit_spinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/edit_spinner"
        style="@android:style/Widget.Material.Light.Spinner.Underlined"
        android:layout_width="169dp"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="64dp"
        android:entries="@array/status"
        android:scrollbarSize="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.789"
        app:layout_constraintStart_toEndOf="@+id/titleedit_textView"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/descriptionedit_textView"
        android:layout_width="386dp"
        android:layout_height="129dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="sans-serif-black"
        android:text="TextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextView"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleedit_textView" />

    <TextView
        android:id="@+id/deadlineedit_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:fontFamily="sans-serif-black"
        android:text="12/10/2021"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descriptionedit_textView" />

    <Button
        android:id="@+id/edittododetails_button"
        android:layout_width="327dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#005F73"
        android:text="Edit ToDo"
        android:textColor="#94D2BD"
        app:cornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deadlineedit_textView" />
</androidx.constraintlayout.widget.ConstraintLayout>